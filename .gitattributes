# Auto detect text files and perform LF normalization
* text=auto

# These files should always have CRLF line endings on checkout
*.bat text eol=crlf

# These files should always have LF line endings on checkout
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Export-ignore (files to exclude from releases/archives)
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
scripts/ export-ignore
HEADER-STANDARDS.md export-ignore
composer.lock export-ignore
phpunit.xml export-ignore
phpcs.xml export-ignore
.eslintrc.json export-ignore
.eslintignore export-ignore

# Keep important files in exports
README.md -export-ignore
CHANGELOG.md -export-ignore
LICENSE -export-ignore
composer.json -export-ignore
